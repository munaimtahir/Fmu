# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=sims_db
DB_USER=sims_user
DB_PASSWORD=sims_password
DB_HOST=postgres
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Redis/RQ Settings (for background jobs)
REDIS_HOST=redis
REDIS_PORT=6379

# Media and Static Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Email Settings
# For development: use console backend (emails printed to console)
# For production: use smtp backend with real SMTP credentials
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Uncomment for production

# SMTP Configuration (required only if using smtp backend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@sims.edu

# Note: For Gmail, you must:
# 1. Enable 2-Factor Authentication
# 2. Generate an App Password (https://myaccount.google.com/security)
# 3. Use the App Password in EMAIL_HOST_PASSWORD
# See Docs/EMAIL_CONFIG.md for detailed configuration guide

# Frontend Settings
VITE_API_URL=http://localhost:8000

# Postgres (for docker-compose)
POSTGRES_DB=sims_db
POSTGRES_USER=sims_user
POSTGRES_PASSWORD=sims_password
