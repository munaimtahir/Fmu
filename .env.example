# ============================================
# Django Core Settings
# ============================================

# SECURITY WARNING: Generate a strong secret key for production!
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CHANGE_ME_IN_PRODUCTION

# SECURITY WARNING: Don't run with debug turned on in production!
# Set to False for production deployment
DJANGO_DEBUG=False

# SECURITY: Comma-separated list of allowed hosts
# For production, set to your VPS IP or domain(s): 172.235.33.181,104.64.0.164,172.237.71.40,localhost,127.0.0.1
# DO NOT use * in production
DJANGO_ALLOWED_HOSTS=172.235.33.181,104.64.0.164,172.237.71.40,localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================

DB_ENGINE=django.db.backends.postgresql
DB_NAME=sims_db
DB_USER=sims_user
DB_PASSWORD=sims_password
DB_HOST=postgres
DB_PORT=5432

# ============================================
# CORS Settings
# ============================================

# Comma-separated list of allowed origins for CORS
# For production, set to your actual frontend URL(s)
CORS_ALLOWED_ORIGINS=http://172.235.33.181,http://172.235.33.181:81,http://104.64.0.164,http://104.64.0.164:81,http://172.237.71.40,http://172.237.71.40:81,http://localhost,http://localhost:81,http://localhost:5174,http://localhost:8001,http://127.0.0.1,http://127.0.0.1:81,http://127.0.0.1:5174,http://127.0.0.1:8001

# ============================================
# CSRF Settings
# ============================================

# Comma-separated list of trusted origins for CSRF protection
# For production, must match your actual frontend URL(s)
CSRF_TRUSTED_ORIGINS=http://172.235.33.181,http://172.235.33.181:81,http://104.64.0.164,http://104.64.0.164:81,http://172.237.71.40,http://172.237.71.40:81,http://localhost,http://localhost:81,http://localhost:5174,http://localhost:8001,http://127.0.0.1,http://127.0.0.1:81,http://127.0.0.1:5174,http://127.0.0.1:8001

# ============================================
# JWT Settings
# ============================================

# Access token lifetime in minutes (default: 60)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in minutes (default: 1440 = 24 hours)
JWT_REFRESH_TOKEN_LIFETIME=1440

# ============================================
# Redis/RQ Settings (for background jobs)
# ============================================

REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Media and Static Files
# ============================================

MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# ============================================
# Email Settings
# ============================================

# For development: use console backend (emails printed to console)
# For production: use smtp backend with real SMTP credentials
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Uncomment for production

# SMTP Configuration (required only if using smtp backend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@sims.edu

# Note: For Gmail, you must:
# 1. Enable 2-Factor Authentication
# 2. Generate an App Password (https://myaccount.google.com/security)
# 3. Use the App Password in EMAIL_HOST_PASSWORD
# See Docs/EMAIL_CONFIG.md for detailed configuration guide

# ============================================
# Frontend Settings
# ============================================

# ============================================
# PostgreSQL (for docker-compose)
# ============================================

POSTGRES_DB=sims_db
